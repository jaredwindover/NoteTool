doctype html
html(lang='en')
  head
    title NoteTool -- New Note
    script(src='http://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js')
    script(src='/js/Edit.js')
  body
    a(href='/') Home
    form#form1(
      action='/MakeNote',
      method='post'
    )
      input#title(
        type='text',
        name='title',
        value='',
        placeholder='Title'
      )
      br
